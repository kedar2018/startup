<script>
// app/javascript/flash.js
function mountFlash() {
  document.querySelectorAll('[data-flash]').forEach((el) => {
    const ms = parseInt(el.getAttribute('data-timeout') || '4000', 10);

    // auto-hide after N ms
    const hideTimer = setTimeout(() => {
      el.style.animation = (el.style.animation ? el.style.animation + ', ' : '') + 'flash-out 220ms ease-in forwards';
    }, ms);

    // remove after animation completes
    el.addEventListener('animationend', (e) => {
      if (e.animationName === 'flash-out') el.remove();
    });

    // manual close
    el.querySelector('.flash__close')?.addEventListener('click', () => {
      clearTimeout(hideTimer);
      el.style.animation = (el.style.animation ? el.style.animation + ', ' : '') + 'flash-out 220ms ease-in forwards';
    });
  });
}

document.addEventListener('DOMContentLoaded', mountFlash);
document.addEventListener('turbo:load', mountFlash); // if using Turbo

</script>
<style>

/* ——— marquee container ——— */
.logo-marquee {
  --logo-height: 110px;          /* ← adjust logo size */
  --gap: 45px;                   /* ← space between logos */
  --speed: 30s;                  /* ← lower = faster */
  position: relative;
  overflow: hidden;
  width: 100%;
  padding: 12px 0;
}

/* ——— moving track ——— */
.logo-track {
  display: flex;
  width: max-content;
  gap: var(--gap);
  animation: marquee-scroll var(--speed) linear infinite;
}

/* two identical strips, back-to-back */
.logo-strip {
  display: inline-flex;
  gap: var(--gap);
}

/* logos */
.vendor-logo {
  height: var(--logo-height);
  width: auto;
  max-width: 100%;
  object-fit: contain;
  display: block;
}

/* pause on hover (optional) */
.logo-marquee:hover .logo-track {
  animation-play-state: paused;
}

/* make it slightly smaller on phones (optional) */
@media (max-width: 576px) {
  .logo-marquee { --logo-height: 80px; --gap: 28px; --speed: 24s; }
}

/* reduced motion accessibility */
@media (prefers-reduced-motion: reduce) {
  .logo-track { animation: none; }
}

/* the secret sauce */
@keyframes marquee-scroll {
  from { transform: translateX(0); }
  to   { transform: translateX(-50%); } /* exactly half because we duplicated */
}
</style>
